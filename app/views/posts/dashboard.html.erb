<form method='get' action='/posts/create' id="create_posts">

    <div class='form-group'>    
        <label for="title">Title:</label> 
        <input name="title" class="form-control" id="title" placeholder="Enter title">
    </div>

    <div class='form-group'>    
        <label for="image_url">Image:</label> 
        <input name='image_url' class="form-control" placeholder="Enter URL">
    </div>

    <div class='form-group'>    
        <label for="content">Post:</label>  
        <textarea name='content' class="form-control" placeholder="Enter post"></textarea>
    </div>

    <div class='form-group'>
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>
        
